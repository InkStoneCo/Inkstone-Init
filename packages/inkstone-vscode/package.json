{
  "name": "inkstone-vscode",
  "displayName": "Inkstone",
  "description": "AI-powered development toolkit: Code-Mind notes, Vibe Coding workflow, Memory management, SPARC modes, and Swarm coordination",
  "version": "0.1.0",
  "publisher": "InkStoneCo",
  "repository": {
    "type": "git",
    "url": "https://github.com/InkStoneCo/Inkstone-Init.git"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Notebooks",
    "Programming Languages"
  ],
  "keywords": [
    "inkstone",
    "code-mind",
    "zettelkasten",
    "vibe-coding",
    "claude-flow",
    "ai",
    "notes"
  ],
  "activationEvents": [
    "workspaceContains:codemind.md",
    "workspaceContains:.claude",
    "onLanguage:markdown",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inkstone.initProject",
        "title": "Inkstone: Initialize Project"
      },
      {
        "command": "inkstone.startVibeCoding",
        "title": "Inkstone: Start Vibe Coding"
      },
      {
        "command": "inkstone.addNote",
        "title": "Inkstone: Add Note Here"
      },
      {
        "command": "inkstone.goToNote",
        "title": "Inkstone: Go to Note"
      },
      {
        "command": "inkstone.findReferences",
        "title": "Inkstone: Find All References"
      },
      {
        "command": "inkstone.saveMemory",
        "title": "Inkstone: Save Memory"
      },
      {
        "command": "inkstone.restoreMemory",
        "title": "Inkstone: Restore Memory"
      },
      {
        "command": "inkstone.searchMemory",
        "title": "Inkstone: Search Memory"
      },
      {
        "command": "inkstone.sparc.architect",
        "title": "Inkstone: SPARC Architect Mode"
      },
      {
        "command": "inkstone.sparc.coder",
        "title": "Inkstone: SPARC Coder Mode"
      },
      {
        "command": "inkstone.sparc.tdd",
        "title": "Inkstone: SPARC TDD Mode"
      },
      {
        "command": "inkstone.swarm.init",
        "title": "Inkstone: Init Swarm"
      },
      {
        "command": "inkstone.swarm.status",
        "title": "Inkstone: Swarm Status"
      }
    ],
    "keybindings": [
      {
        "command": "inkstone.addNote",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "inkstone.addNote",
          "group": "inkstone@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "inkstone-sidebar",
          "title": "Inkstone",
          "icon": "images/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "inkstone-sidebar": [
        {
          "id": "inkstone-notes",
          "name": "Notes"
        },
        {
          "id": "inkstone-memory",
          "name": "Memory"
        },
        {
          "id": "inkstone-sparc",
          "name": "SPARC"
        },
        {
          "id": "inkstone-swarm",
          "name": "Swarm"
        },
        {
          "id": "inkstone-vibe-coding",
          "name": "Vibe Coding"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run esbuild-base -- --sourcemap",
    "dev": "npm run esbuild-base -- --sourcemap --watch",
    "test": "vitest run",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "package": "vsce package --no-dependencies --allow-missing-repository"
  },
  "dependencies": {
    "@inkstone/codemind-core": "*"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.1",
    "eslint-config-prettier": "^9.1.0",
    "vitest": "^1.0.0"
  },
  "license": "Apache-2.0"
}
