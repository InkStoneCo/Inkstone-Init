{
  "name": "@inkstone/codemind-daemon",
  "version": "0.1.0",
  "description": "File watcher daemon for Code-Mind",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "codemind-daemon": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@inkstone/codemind-core": "*",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint-config-prettier": "^9.1.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "inkstone",
    "codemind",
    "daemon",
    "file-watcher"
  ],
  "license": "Apache-2.0"
}
